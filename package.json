{
  "name": "invig",
  "version": "0.0.9",
  "description": "Take a legacy JS or CoffeeScript codebase and automatically convert it to ES6 & standardjs.com",
  "main": "lib/cli.js",
  "bin": "lib/cli.js",
  "preferGlobal": true,
  "jest": {
    "verbose": true,
    "testPathDirs": [
      "src/"
    ]
  },
  "scripts": {
    "build:watch": "babel src --watch --source-maps --out-dir lib",
    "build": "babel src --source-maps --out-dir lib",
    "fix": "eslint . --fix",
    "jest:update": "env DEBUG=invig:* NODE_ENV=test jest --updateSnapshot",
    "jest": "env DEBUG=invig:* NODE_ENV=test jest",
    "demo": "scripts/demo1.sh",
    "lint": "eslint .",
    "npublish": "npm publish",
    "push": "git push && git push --tags",
    "release:major": "env SEMANTIC=major npm run release",
    "release:minor": "env SEMANTIC=minor npm run release",
    "release:patch": "env SEMANTIC=patch npm run release",
    "release": "npm version ${SEMANTIC:-patch} -m \"Release %s\" && npm-run-all build push npublish",
    "test:update": "npm run jest:update",
    "test": "npm run jest",
    "upgrade:modules": "next-update --keep true --tldr --test /usr/bin/true && npm run test:update && echo 'inspect git diff now'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvz/invig.git"
  },
  "author": "",
  "license": "MIT",
  "files": [
    "lib",
    ".eslintignore",
    ".eslintrc",
    ".babelrc"
  ],
  "bugs": {
    "url": "https://github.com/kvz/invig/issues"
  },
  "dependencies": {
    "async": "2.1.4",
    "babel-cli": "6.23.0",
    "babel-core": "6.23.1",
    "babel-eslint": "7.1.1",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-es6-promise": "1.1.1",
    "babel-plugin-syntax-async-functions": "6.13.0",
    "babel-plugin-transform-async-to-generator": "6.22.0",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "commander": "2.9.0",
    "decaffeinate": "2.47.3",
    "depurar": "0.3.0",
    "eslint": "3.15.0",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.4.1",
    "eslint-plugin-standard": "2.0.1",
    "globby": "6.1.0",
    "lebab": "2.7.1",
    "npm-check": "5.4.0",
    "os-tmpdir": "1.0.2",
    "pkg-up": "1.0.0",
    "prettier": "0.17.0",
    "scrolex": "0.0.20",
    "strip-ansi": "3.0.1",
    "untildify": "3.0.2"
  },
  "devDependencies": {
    "fakefile": "0.0.8",
    "cli-spinners": "1.0.0",    
    "jest": "18.1.0",
    "next-update": "1.5.1",
    "npm-run-all": "4.0.1"
  },
  "homepage": "https://github.com/kvz/invig#readme"
}
